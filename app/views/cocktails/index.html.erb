<%= render 'shared/banner' %>
<div class="container cocktails-container">
  <h1>Cocktails!</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.image_url %>);">
          <div class="card-category"> <%= cocktail.ingredients.size %> ingredient<%= "s" if cocktail.ingredients.size > 1  %></div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
